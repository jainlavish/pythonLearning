st_ask = input("Do you want to add a student?(Y/N):")
if st_ask == "Y":
    st_name = input("Enter student name:")
    st_id = input("Enter student id:")
    add_students(st_name, st_id)
    print_students_titlecase()
else:
    print("Thanks for using the app.")
